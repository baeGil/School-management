<head>
  <link href="/stylesheets/styles.css" rel="stylesheet" />
</head>
<body>
  <div class="relative overflow-x-auto">
    <button
      onclick="history.back()"
      class="bg-green-400 hover:bg-green-500 text-gray-700 font-semibold hover:font-bold py-2 px-4 hover:border-transparent rounded"
    >
      Quay lại
    </button>
    <table
      class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400"
    >
      <thead
        class="text-xs text-gray-700 uppercase bg-gray-200 dark:bg-gray-700 dark:text-gray-400"
      >
        <tr>
          <th scope="col" class="px-6 py-3">Các trường dữ liệu</th>
          <th scope="col" class="px-6 py-3">Thông tin chi tiết</th>
        </tr>
      </thead>
      <tbody>
        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
          <th
            scope="row"
            class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
          >
            ID
          </th>
          <td class="px-6 py-4"><%= data.id %></td>
        </tr>

        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
          <th
            scope="row"
            class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
          >
            Mã lớp
          </th>
          <td class="px-6 py-4"><%= data.ma_lop %></td>
        </tr>

        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
          <th
            scope="row"
            class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
          >
            Mã học phần
          </th>
          <td class="px-6 py-4"><%= data.ma_hoc_phan %></td>
        </tr>

        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
          <th
            scope="row"
            class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
          >
            Ghi chú
          </th>
          <td class="px-6 py-4"><%= data.ghi_chu %></td>
        </tr>

        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
          <th
            scope="row"
            class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
          >
            Ngày học
          </th>
          <td class="px-6 py-4"><%= data.ngay_hoc %></td>
        </tr>

        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
          <th
            scope="row"
            class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
          >
            Tuần học
          </th>
          <td class="px-6 py-4">
            <%= data.tuan_bat_dau %> - <%= data.tuan_ket_thuc %>
          </td>
        </tr>

        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
          <th
            scope="row"
            class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
          >
            Ca học
          </th>
          <td class="px-6 py-4">
            <%= data.ca_bat_dau %> - <%= data.ca_ket_thuc %>
          </td>
        </tr>

        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
          <th
            scope="row"
            class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
          >
            Phòng học
          </th>
          <td class="px-6 py-4"><%= data.phong_hoc %></td>
        </tr>

        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
          <th
            scope="row"
            class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
          >
            Trạng thái
          </th>
          <td class="px-6 py-4">
            <% if (data.trang_thai === 0) { %>
            <p>Đóng</p>
            <% }if (data.trang_thai === 1){ %>
            <p>Mở</p>
            <% } %>
          </td>
        </tr>

        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
          <th
            scope="row"
            class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
          >
            Số lượng đăng ký
          </th>
          <td class="px-6 py-4"><%= data.so_luong_dang_ky %></td>
        </tr>

        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
          <th
            scope="row"
            class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
          >
            Số lượng đăng ký tối đa
          </th>
          <td class="px-6 py-4"><%= data.so_luong_max %></td>
        </tr>
        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
          <th
            scope="row"
            class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
          >
            Trạng thái giáo viên
          </th>
          <td class="px-6 py-4">
            <% if (data.trang_thai_gv === 0) { %>
            <p>Chưa nhận</p>
            <% }if (data.trang_thai_gv === 1){ %>
            <p>Đã nhận</p>
            <% } %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</body>
